<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
		<f:SimpleForm
			layout="ResponsiveGridLayout"
			title="Demo" >
			<f:content>
				<Label text="{i18n>poNumber}" />
				<Text text="{poNumber}" />
				<Label text="{i18n>description}" />
				<Text text="{description}" />
				<Label text="{i18n>amount}" />
				<Input value="{totalAmount}"/>
				<Label text="{i18n>high?}" />
				<Text text="{= ${totalAmount} > 2000 ? 'High' : 'Low' " />			
				<Label text="One More" />
				<Text text="{= ${totalAmount} + 1}" />	
			</f:content>
		</f:SimpleForm>  
</core:FragmentDefinition>