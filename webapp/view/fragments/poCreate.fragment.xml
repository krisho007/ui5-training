<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
			<f:SimpleForm
				id="formId"
				layout="ResponsiveGridLayout">
				<f:content>
					<Label id="labelId" text="{i18n>poNumber}" />
					<Input id="_IDGenInput1" value="{ID}" type="Number" />
					<Label id="_IDGenLabel1" text="{i18n>description}" />
					<Input id="_IDGenInput4" value="{
														path: 'VAT',
														type: 'sap.ui.model.type.Float',
														constraints: {
															maximum: 123.99
														}
          											}"
					/>	
					<Label id="_IDGenLabel2" text="{i18n>PurchasingGroup}"/>
					<Input id="_IDGenInput3" value="{
														path: 'BUKRS',
														type: 'sap.ui.model.type.String',
														constraints: {
															minLength: 1,
															maxLength: 10
														}
          											}"
					/>				
				</f:content>
			</f:SimpleForm>
</core:FragmentDefinition>