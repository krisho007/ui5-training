<mvc:View xmlns:core="sap.ui.core" controllerName="MyApp.controller.POs" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns="sap.m" xmlns:l="sap.ui.layout">
    <Page showHeader="false">
        <l:VerticalLayout >
            <ObjectHeader title="Purchase Orders" >
                <attributes>
                    <ObjectAttribute text="Total POs: {/myPOs/length}" />
                </attributes>
            </ObjectHeader>
        <Table id="purchaseOrdersTable" items="{/myPOs}">
            <columns>
                <Column>
                    <Text text="PO Number" />
                </Column>
                <Column>
                    <Text text="Description" />
                </Column>
                <Column>
                    <Text text="Total Amount" />
                </Column>
                <Column>
                    <Text text="View"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem type="Active" press="onItemPress">
                    <cells>
                        <Text text="{poNumber}" /> 
                        <Text text="{description}" /> 
                        <Input value="{ path: 'totalAmount', formatter: '.formatter.toTwoDecimals'}"/>
                        <Button text="View" press="showDetailsInPopup"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </l:VerticalLayout>
</Page>
</mvc:View>