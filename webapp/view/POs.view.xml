<mvc:View xmlns:core="sap.ui.core" controllerName="MyApp.controller.POs" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns="sap.m" xmlns:l="sap.ui.layout">
    <Page id="_IDGenPage1" showHeader="false">
        <l:VerticalLayout id="_IDGenVerticalLayout1" >
            <ObjectHeader id="_IDGenObjectHeader1" title="Purchase Orders" >
                <attributes>
                    <ObjectAttribute id="_IDGenObjectAttribute1" text="Total POs: {/myPOs/length}" />
                </attributes>
            </ObjectHeader>
        <Table id="purchaseOrdersTable" items="{/POs}">
            <headerToolbar>
                <OverflowToolbar id="_IDGenOverflowToolbar1">
                    <Title text="Purchase Orders" level="H2"/>
                    <ToolbarSpacer />
                    <Button id="_IDGenButton1" text="New" press="onCreate"/>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column id="_IDGenColumn1">
                    <Text id="_IDGenText1" text="PO Number" />
                </Column>
                <Column id="_IDGenColumn2">
                    <Text id="_IDGenText2" text="Description" />
                </Column>
                <Column id="_IDGenColumn3">
                    <Text id="_IDGenText3" text="PurchasingGroup" />
                </Column>
                <Column>
                    <Text text="Action" />
                </Column>
            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem1" type="Active" press="onItemPress">
                    <cells>
                        <Text id="_IDGenText4" text="{ID}" /> 
                        <Text id="_IDGenText5" text="{VAT}" /> 
                        <Text id="_IDGenText6" text="{BUKRS}" />
                        <Button id="_IDGenButton2" text="Delete" press="onDelete"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </l:VerticalLayout>
</Page>
</mvc:View>